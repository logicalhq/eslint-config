{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@logicalhq/*"
  ],
  "scripts": {
    "clean": "lerna clean && lerna run clean",
    "fmt:check": "lerna run fmt:check",
    "lint": "eslint . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:spelling": "cspell --config=.cspell.json \"**/*.{md,js}\"",
    "precommit": "yarn lint-staged",
    "prepush": "yarn run fmt:check",
    "postinstall": "lerna bootstrap && lerna link",
    "test:ci": "lerna run test:ci --concurrency 1"
  },
  "devDependencies": {
    "@commitlint/cli": "^9.1.2",
    "@logicalhq/commitlint-config": "^1.0.2",
    "cspell": "^4.1.0",
    "eslint": "^7.8.1",
    "eslint-plugin-import": "^2.22.0",
    "eslint-plugin-jest": "^23.20.0",
    "husky": "^4.2.5",
    "jest": "^26.4.2",
    "jest-junit": "^11.1.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.3.0",
    "prettier": "^2.1.1"
  },
  "resolutions": {
    "**/lodash": "^4.17.19",
    "**/dot-prop": "^5.2.0"
  }
}
