{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@logicalhq/*"
  ],
  "scripts": {
    "clean": "lerna clean && lerna run clean",
    "fmt:check": "lerna run fmt:check",
    "lint": "eslint . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:spelling": "cspell --config=.cspell.json \"**/*.{md,js}\"",
    "precommit": "yarn lint-staged",
    "prepush": "yarn run fmt:check",
    "postinstall": "lerna bootstrap && lerna link",
    "test:ci": "lerna run test:ci --concurrency 1"
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@logicalhq/commitlint-config": "^1.0.2",
    "cspell": "^4.2.5",
    "eslint": "^7.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.3",
    "husky": "^4.3.6",
    "jest": "^26.6.3",
    "jest-junit": "^12.0.0",
    "lerna": "^3.22.1",
    "lint-staged": "^10.5.3",
    "prettier": "^2.2.1"
  },
  "resolutions": {
    "**/lodash": "^4.17.19",
    "**/dot-prop": "^5.2.0"
  }
}
