{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@logicalhq/*"
  ],
  "scripts": {
    "clean": "lerna clean && lerna run clean",
    "fmt:check": "lerna run fmt:check",
    "lint": "eslint . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:spelling": "cspell --config=.cspell.json \"**/*.{md,js}\"",
    "precommit": "yarn lint-staged",
    "prepush": "yarn run fmt:check",
    "postinstall": "lerna bootstrap && lerna link",
    "test:ci": "lerna run test:ci --concurrency 1",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^13.1.0",
    "@logicalhq/commitlint-config": "^1.2.0",
    "cspell": "^5.8.1",
    "eslint": "^7.32.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jest": "^24.4.0",
    "husky": "^7.0.1",
    "jest": "^27.0.6",
    "jest-junit": "^12.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.1.2",
    "prettier": "^2.3.2"
  },
  "resolutions": {
    "@npmcli/git": "^2.0.8",
    "lodash": "^4.17.19",
    "dot-prop": "^5.2.0",
    "normalize-url": "^4.5.1",
    "trim-newlines": "^3.0.1"
  }
}
