{
  "name": "root",
  "private": true,
  "workspaces": [
    "packages/@logicalhq/*"
  ],
  "scripts": {
    "clean": "lerna clean && lerna run clean",
    "fmt:check": "lerna run fmt:check",
    "lint": "eslint . --ext .js",
    "lint:fix": "yarn lint --fix",
    "lint:spelling": "cspell --config=.cspell.json \"**/*.{md,js}\"",
    "precommit": "yarn lint-staged",
    "prepush": "yarn run fmt:check",
    "postinstall": "lerna bootstrap && lerna link",
    "test:ci": "lerna run test:ci --concurrency 1",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.4",
    "@logicalhq/commitlint-config": "^1.2.0",
    "cspell": "^5.6.2",
    "eslint": "^7.28.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "husky": "^6.0.0",
    "jest": "^27.0.4",
    "jest-junit": "^12.2.0",
    "lerna": "^4.0.0",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.1"
  },
  "resolutions": {
    "**/lodash": "^4.17.19",
    "**/dot-prop": "^5.2.0"
  }
}
